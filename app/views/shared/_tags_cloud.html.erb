<div class="tag-cloud-container">
	<h4  class="title is-5 has-text-centered" onclick="showTags()" style="cursor: pointer;" >Popular tags  <i class="fa fa-angle-double-down" id="arrow"></i></h4>
	<div id='tag-cloud-container'>
	<%Tag.shot_count.first(30).each do |tag|%>
		<%= link_to tag_path(tag.name) do %>
			<span class='tag  ' > <%= tag.name.upcase %> </span>
		<%end%>
	<%end %>
	</div>
</div>
