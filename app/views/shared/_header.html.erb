<% if flash[:notice] %>
  <div class="notification is-primary global-notification">
    <p class="notice"><%= notice %></p>
  </div>
<% end %>
<% if flash[:alert] %>
<div class="notification is-danger global-notification">
  <p class="alert"><%= alert %></p>
</div>
<% end %>
<nav class="navbar is-dark">
  <div class="navbar-brand">
    <%= link_to root_path, class:"navbar-item" do %>
      <h1 class="title is-5 has-text-white">Dribbble Clone</h1>
    <% end  %>
    <div class="navbar-burger burger" data-target="navMenuColordark-example">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </div>

  <div id="navMenuColordark-example" class="navbar-menu">
    <div class="navbar-start">
      <div class="navbar-item has-dropdown is-hoverable">
        <%= link_to 'Shots', root_path , class:"navbar-link" %>
        <div class="navbar-dropdown is-boxed">
          <%= link_to 'All Shots', request.params.merge(list: "all"), class: "navbar-item"%>
          <%= link_to 'Debut', request.params.merge(list: "debut"), class: "navbar-item"%>
        </div>
      </div>

      <%= link_to 'Designers', designers_path , class:"navbar-item" %>
    </div>

    <div class="navbar-end">
        <div class="navbar-brand">
        <% if user_signed_in? %>
              <% unless current_user.designer.blank?%>
                <% if  current_user.designer.persisted?%>
                
                  <%= link_to new_shot_path, class:"navbar-item" do%>
                    <span class="icon "><i class="fa fa-cloud-upload fa-lg"></i></span>
                  <% end %>

                  <%= link_to designer_path(current_user.designer), class:"navbar-item" do%>
                    <span class="icon "><i class="fa fa-user fa-lg"></i></span>
                  <% end %>
                  <%= link_to notifications_path(current_user.designer), class:"navbar-item" do%>
                    <span class="icon "><i class="fa fa-bell fa-lg"></i></span>
                    <%= notification_present? current_user%>
                  <% end %>
                <% end %>  
              <%else%> 
              <div class="navbar-item">
                <p class="control">
                  <%= link_to new_designer_path, class:"button is-primary "  do%>
                    <span class="icon "><i class="fa fa-upload fa-lg"></i></span>
                    <span>Create designer profile</span>
                  <% end %>
                </p>
              </div>
              <% end %>

              
              <%#= link_to current_user.name, edit_user_registration_path, class:"navbar-item" %>
              <%= link_to  destroy_user_session_path, method: :delete, class:"navbar-item"  do %>
              <span class="icon "><i class="fa fa-sign-out fa-lg"></i></span>
              
              <%end%>
          <% else %>
            <%= link_to "Sign In", new_user_session_path, class:"navbar-item" %>
            <%= link_to "Sign up", new_user_registration_path, class:"navbar-item"%>
          <% end %>
          </div>
    </div>
  </div>
</nav>

