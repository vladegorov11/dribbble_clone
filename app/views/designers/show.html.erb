<div class="profile-container  has-text-centered is-size-6 has-text-weight-semibold info-bar">
  <%= link_to root_path do %>
    <span ">Shots: <%= @designer.shots.count%></span>
  <%end%>
  <%= link_to root_path do %>
    <span >Followers: <%= @designer.follows.count%></span>
  <%end%>
  <%= link_to root_path do %>
    <span >likes:  <%= @designer.shots.map{|shot| shot.get_likes.size}.inject(:+) %></span>
  <%end%>
  <%= link_to root_path do %>
    <span >Comments:  <%= @designer.shots.map{|shot| shot.comments.size}.inject(:+) %></span>
  <%end%>
</div>
<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-3" :class="{formstatic: scrollPosition < 100, formfixed: scrollPosition > 100}">
        <div class="profile-container">
          <%if user_signed_in? %>
            <div class="has-text-right">
              <%= link_to  edit_designer_path(@designer) do %>
                <span class="icon" style="font-size:1.5em;"><i class="fa fa-cog"></i></span>
              <% end if current_user.id == @designer.user_id%>
            </div>
          <% end %>
          <div class="shot-full">
            <%= gravatar_image_tag(@designer.user.email.gsub('spam', 'mdeering'), alt: @designer.user.name, class: "",gravatar: { size: 120 }); %>
            </div>
            <div class="shot-full">
              <div class="user-name"><%= @designer.user.name %></div>
              <div class="designer-city">Tel Aviv</div>
            </div>
          <%=render partial: "shared/social_links", locals: {item_size: 1.4, designer: @designer} %>
          <div>
             
          <hr>
          <h3>DESCRIPTION</h3>
          <div class="designer-description"><%= truncate(@designer.description, length: 200) %></div>
          </div>
          <hr>
          <h3>SKILLS</h3>
          <div class="designer-description">
            <div class="tags">
              <%=raw @designer.skills.map(&:name).map{|skill| link_to "<span class='tag  is-size-7'>#{skill}</span>".html_safe, skill_path(skill)}.join(' ')%>
            </div>
          </div>
        </div>
      </div>
      <div class="column is-9">
        <%= render partial: 'shared/shots', locals: {colomn_size: "is-4"}%>
      </div>
    </div>
  </div>
</section>
