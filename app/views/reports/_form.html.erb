<div class="column">
	<div class="column is-8 is-offset-2">

		<%= simple_form_for(@reportable, html: { multipart: true }) do |f|%>
			<%= f.error_notification %>
		 	<%= f.input :body, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' }, as: 'text' %>

			<div class="field ">
		      <div class="control">
		        <label class="label">Status:</label>
		        <div class="control has-icons-left">
		          <span class="select">
		            <%= f.input_field :report_type_id, collection: @report_types, prompt: "Select a shot status " %>
		          </span>
		          <span class="icon is-small is-left">
		            <i class="fa fa-stream"></i>
		          </span>
		        </div>
		      </div>
		    </div>
		    
			<%= f.button :submit , class: 'button is-primary' %>
		<%end%>
	</div>
</div>
