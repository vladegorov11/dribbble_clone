<%= simple_form_for([@shot, @raportable, @report], html: { multipart: true }) do |f|%>
<%= f.error_notification %>
	<div class="columns is-centered">
		<div class="column is-half">
			<div class="field">
		      <div class="control">
		        <%= f.input :body, input_html: { class: "textarea"}, wrapper: false, label_html: { class: "label" } %>
		      </div>
		    </div>
			 <div class="field">
		      <div class="control" id="submit-wrap">
		        <%= f.button :submit, class:"button is-primary", id:"submit"%>
		      </div>
		    </div>
		</div>
	</div>
<%end%>


	