<% if @over_ten %>
   <%#= link_to 'Show Previous', '?m=all' %>
<% end %>
<div class="columns is-multiline">
  <div class=" column is-8 is-offset-2 chat-container">
        <%= link_to conversations_path, class: "is-size-5" do %>
          <i class="fa fa-arrow-left"></i>
        <%end%>
      <div class="messages-wrapper element" id="chat">

        <% @messages.each do |message| %>
          <% if message.body %>
            <% user = User.find(message.user_id) %>
            <div class="">
              <div class="message-wrapper  is-size-7 <%= 'exp' if message.user_id == current_user.id%>">
                <div class='messages-header '>
                  <%= gravatar_image_tag(message.user.email.gsub('spam', 'mdeering'), class: "rounded ", gravatar: { size: 35 }); %>
                  <span class="user_name"><%= user.name %></span>  
                </div>              
                  <%= message.body %>  
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
      <%= simple_form_for [@conversation, @message], html: { multipart: true }  do |f| %>
        <div class="field">
          <div class="control">
            <%= f.input :body, input_html: { class: "textarea"}, wrapper: false, label_html: { class: "label" },label: false  %>
          </div>
        </div>
        <%= f.text_field :user_id, value: current_user.id, type: "hidden"  %>
        <div class="field">
            <div class="control" id="submit-wrap">
              <%= f.button :submit, class:"button is-primary", id:"submit"%>
            </div>
          </div>
      <% end %>
   
<%#= message_checker(message,current_user)%>



